package com.monocept.app.dto;

import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.Size;

public class CommentDTO {

    private int id;

    @NotBlank(message = "Please enter the description")
    @Size(min = 2, max = 50, message = "Please check the size of description")
    private String description;

    private int blogId; // Use an ID to represent the associated Blog

    public CommentDTO() {}

    public CommentDTO(int id, String description, int blogId) {
        this.id = id;
        this.description = description;
        this.blogId = blogId;
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    public int getBlogId() {
        return blogId;
    }

    public void setBlogId(int blogId) {
        this.blogId = blogId;
    }

    @Override
    public String toString() {
        return "CommentDTO [id=" + id + ", description=" + description + ", blogId=" + blogId + "]";
    }
}
